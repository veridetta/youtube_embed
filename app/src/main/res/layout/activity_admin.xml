<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sdp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/_16sdp"
    android:paddingTop="@dimen/_32sdp"
    android:paddingRight="@dimen/_16sdp"
    android:paddingBottom="@dimen/_16sdp"
    android:background="@color/bg">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_96sdp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_32sdp" />

    <!-- Nama Aplikasi -->
    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_32sdp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_24sdp"
        android:textStyle="bold" />

    <!-- Selamat Datang Admin -->
    <TextView
        android:id="@+id/textViewWelcomeAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAppName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_32sdp"
        android:textColor="@color/white"
        android:text="Selamat Datang Admin"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <!-- Tombol Program -->
    <Button
        android:id="@+id/buttonProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWelcomeAdmin"
        android:layout_marginBottom="@dimen/_16sdp"
        android:theme="@style/Theme.button"
        android:text="Program" />

    <!-- Tombol Podcast -->
    <Button
        android:id="@+id/buttonPodcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonProgram"
        android:layout_marginBottom="@dimen/_16sdp"
        android:theme="@style/Theme.button"
        android:text="Podcast" />
    <!-- Tombol Keluar -->
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonPodcast"
        android:layout_marginBottom="@dimen/_16sdp"
        android:theme="@style/Theme.button"
        android:text="Logout" />

</RelativeLayout>
